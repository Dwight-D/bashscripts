#!/bin/bash
#Autogenerated script template

#     Variable declarations
#========================================

me=${0##*/}

usage (){
    echo "$me - Description missing"
    echo "Usage: $me"
    exit 1
}


#       Parse options
#=======================================

while getopts "h" opt; do
    case $opt in
        h )
            usage
            ;;
        \? )
            usage
            ;;
        : )
            echo "Option requires an argument: $OPTARG"
            exit
            ;;
    esac
done
shift $((OPTIND -1))

wal -i $(artthief -c -d /home/max/pictures/artthief) -a 75 --backend=colorz
