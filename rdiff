#!/bin/bash
#Autogenerated script template

#     Variable declarations
#========================================

me=${0##*/}
file="$1"
host1="$2"
host2="$3"
ssh=initssh


usage (){
    echo "$me - Description missing"
    echo "Usage: $me"
    exit 1
}


#       Parse options
#=======================================

while getopts "hs" opt; do
    case $opt in
        s)
            #dostuff
            ;;
        h )
            usage
            ;;
        \? )
            usage
            ;;
        : )
            echo "Option requires an argument: $OPTARG"
            exit
            ;;
    esac
done
shift $((OPTIND -1))

if [ "$#" -lt 3 ]; then
    usage
fi

cmd=sdiff
action=cat

if [ -x "$(command -v colordiff)" ]; then
    cmd+=" --diff-program=colordiff"
fi
$cmd <($ssh $host1 $action $file) <($ssh $host2 $action $file)









