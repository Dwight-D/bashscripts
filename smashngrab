#!/bin/bash
#Autogenerated script template

#     Variable declarations
#========================================

_sudo=false
debug=false

usage (){
    echo "${0##*/}: Copies a file/directory from a remote server and saves as a tar archive."
    echo "Usage: ${0##*/} host src [dest]"
    echo -e "\t-d\tdebug mode"
    echo -e "\t-s\tRemote sudo mode, prompts for password"
    exit 1
}


#       Parse options
#=======================================

while getopts "hsd" opt; do
    case $opt in
        h )
            usage
            ;;
        s )
            _sudo=true
            ;;
        d )
            debug=true
            ;;
        \? )
            usage
            ;;
        : )
            echo "Option requires an argument: $OPTARG"
            exit
            ;;
    esac
done
shift $((OPTIND -1))

if [ "$#" -lt 2 ]; then
    usage
fi

host="$1"
target_dir="$2"
dest="$3"
tarname="$(basename $target_dir).grab.tar"
tar_path="/tmp/$tarname"
haul=""


if [ "$debug" = false ]; then
    exec 2>/dev/null
fi

echo "
Smashing"

#If sudo specified, prompt for password
if [ "$_sudo" = true ]; then
    read -s -p "Password?
" pass
    haul=$(ssh -t $host "echo $pass | sudo -S tar -cvaf $tar_path $target_dir | grep -E '^/'; sudo chmod 644 $tar_path && sudo chown \$(whoami) $tar_path") 1>&2
else
    haul=$(ssh -t $host tar -cvaf $tar_path $target_dir | grep -E '^/'; chmod 644 $tar_path) 1>&2
fi

echo "Grabbing"
scp $host:$tar_path . >&2 

#If dest provided, move there
if [ ! -z "$dest" ]; then
    mv $tarname $dest
fi

echo "Cleaning up the evidence"
ssh $host rm $tar_path >&2

echo Haul:
echo "$haul"
